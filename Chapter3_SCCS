clog1df <- cbind(clog1df, clog1_bic, clog1_aic)
names(clog1df)[2]<-paste("p_value")
names(clog1df)[4]<-paste("AIC")
names(clog1df)[3]<-paste("BIC")
output <- rbind(clog0df, clog1df)

